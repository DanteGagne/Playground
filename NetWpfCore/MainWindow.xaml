<Window x:Class="NetWpfCore.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NetWpfCore"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
		<StackPanel Width="400" Orientation="Horizontal" Height="29" >
			<Button Content="Bad Tooltip" Margin="5,0" Height="25" ToolTip="This is a somewhat longer tooltip that has a bit more information than what Magnifier will easily let you see."/>
			<Border BorderThickness="2" BorderBrush="Blue" Margin="5,0">
				<Button Content="Focus" Height="25"/>
			</Border>
			<Button Content="No Focus" Margin="5,0" Height="25"/>
		</StackPanel>
    </Grid>
</Window>
